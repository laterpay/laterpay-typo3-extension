// content area --------------------------------------------------------------------------------------------------------
.lp_page
    min-height              100%

.lp_pagewrap
    max-width               1240px
    padding                 $fs-2

.lp_row
    // no particular styles attached


// tabs ----------------------------------------------------------------------------------------------------------------
.lp_navigation
    background-color        $background-lightest
    border-bottom           1px solid $border-darker
    box-shadow              0 1px 0 $background-lightest
    left                    -20px
    padding-top             2rem
    width                   101.6%

.lp_page .lp_navigation_tabs
    margin-left             $fs-2

.lp_navigation_tabs__item
    display             inline-block
    margin-left         1.5rem
    position            relative
    top                 2px

    &:first-child
        margin-left     0

    &:hover .lp_navigation_tabs__submenu {
        display: inline-block;
        position: absolute;
    }

    a {
        color: $text-lighter;
        font-size: $fs-1;
        min-width: 7.5em;
        padding: 0.5em 1em 0.75em
        text-align: center;
    }

    &:hover a {
        color: $clickable;

        &:hover {
            color: $clickable-highlight;
        }
    }

    &.lp_is-current
        background-color    $background
        border-radius       4px 4px 0 0
        border-top          4px solid $clickable

        &:hover > a,
        > a
            color           $text
            cursor          default
            font-weight     600

.lp_navigation_tabs__item .lp_navigation_tabs__submenu {
    background: $background-lightest;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.21);
    border-radius: 0 0 3px 3px;
    display: none;
    margin-top: -3px;
}
.lp_navigation_tabs__item.lp_is-current .lp_navigation_tabs__submenu {
    background: $background;
}


// flash messages ------------------------------------------------------------------------------------------------------
.lp_flashMessage
    box-shadow              0 1px 4px 0 hsla(0, 0%, 0%, 0.55)
    margin                  0
    opacity                 0.9
    position                fixed // always show flash message at top of screen, even if page is scrolled down
    top                     2.5rem
    width                   96%
    z-index                 $zindex-overlayed_1
